{# Send message form #}
{% extends 'FulgurioUserBundle:Admin:layout.html.twig' %}

{% block content %}
		<form role="form" method="post" action="{{ action }}" style="padding: 1em">
			<div class="lead">{{ confirmationMessage }}</div>
			<div class="form-group">
				<label for="message">{% trans from 'admin' %}ban.form.leave_a_message{% endtrans %}</label>
				<textarea name="message" cols="" rows="8" class="form-control" id="message">{{ app.request.get('message') }}</textarea>
			</div>
			<div class="pull-right">
				<button type="submit" name="confirm" class="btn btn-primary" value="yes">{% trans %}form.confirmation.yes{% endtrans %}</button>
				<a href="{{ path("fulgurio_user_usermanager_list") }}" class="btn btn-default popupClose">{% trans %}form.confirmation.no{% endtrans %}</a>
			</div>
			<div class="clearfix"></div>
		</form>
{% endblock %}